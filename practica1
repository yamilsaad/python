def calculo_combustible():
    print(f"La cantidad necesaria de combustible para los Vehiculos Turisticos es {valor1*40} Litros")
    print(f"La cantidad necesaria de combustible para los Vehiculos Todo Terreno es {valor2*65} Litros")
    print(f"El total de combustible necesario es: {(valor1*40)+(valor2*65)} Litros")

print("Calcula cantidad de Litros de Combustible")
valor1=int(input("Ingresa Cantidad de Vehiculos Turisticos: "))
valor2=int(input("Ingresa Cantidad de Vehiculos Todo Terreno: "))

calculo_combustible()




