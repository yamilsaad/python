#Menu
"""
def menu():
    print("1. Sumar")
    print("2. Restar")
    print("3. Multiplicar")
    print("4. Dividir")
    print("0. Cerrar Programa")
    #print(1. sumar\n2. restar\n3...)
    
def suma(val1,val2):
    print(f"Resultado de la suma ente {val1} y {val2} es: {val1+val2}")
    
def resta(val1,val2):
    print(f"Resultado de la resta ente {val1} y {val2} es: {val1-val2}")
    
def multiplicacion(val1,val2):
    print(f"Resultado de la multiplicacion ente {val1} y {val2} es: {val1*val2}")

def divicion(val1,val2):
    print(f"Resultado de la divicion ente {val1} y {val2} es: {val1/val2}")
    

var_cin=True
while(var_cin==True):
    menu()
    op=int(input("Ingresa una opcion: "))#CASTEO
    if op!=0:
        valor1=int(input("Ingresa el valor 1: "))
        valor2=int(input("Ingresar el valor 2: "))
    
        if (op==1):
            suma(valor1, valor2)
        elif (op==2):
            resta(valor1, valor2)
        elif (op==3):
            multiplicacion(valor1, valor2)
        elif (op==4):
            divicion(valor1, valor2)
        elif (op==0):
            var_cin=False

